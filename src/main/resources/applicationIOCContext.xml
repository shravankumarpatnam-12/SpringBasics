    <bean id="customerBean" class="com.IOC.loose.coupling.Customer">
        <constructor-arg name="firstName" value="Raj"></constructor-arg>
        <constructor-arg name="lastName" value="Kumar"></constructor-arg>
        <constructor-arg name="email" value="raj@gmail.com"></constructor-arg>
        <constructor-arg name="phoneNumber" value="04842984243"></constructor-arg>
        <constructor-arg ref="savingsAccountBean"></constructor-arg>
    </bean>

    <bean id="customerBean1" class="com.IOC.loose.coupling.Customer">
        <constructor-arg name="firstName" value="Raj"></constructor-arg>
        <constructor-arg name="lastName" value="Kumar"></constructor-arg>
        <constructor-arg name="email" value="raj@gmail.com"></constructor-arg>
        <constructor-arg name="phoneNumber" value="04842984243"></constructor-arg>
        <constructor-arg ref="salaryAccountBean"></constructor-arg>
    </bean>

    <bean id="customerBean2" class="com.IOC.loose.coupling.Customer">
        <constructor-arg name="firstName" value="Raj"></constructor-arg>
        <constructor-arg name="lastName" value="Kumar"></constructor-arg>
        <constructor-arg name="email" value="raj@gmail.com"></constructor-arg>
        <constructor-arg name="phoneNumber" value="04842984243"></constructor-arg>
        <constructor-arg ref="nriAccountBean"></constructor-arg>
    </bean>

</beans>